include ('../auto')

/*
 * L'objet Danger contient un combo représentant un ensemble d'actions et les dommages approximatifs de ces actions.
 * Le combo est une chaîne de caractères et est utilisé à des fins de tests / debugs.
 */
class Danger{
	cell
	dmg
	combo
	score
	constructor(cell, dmg, str){
		this.cell = cell
		this.dmg = dmg
		this.combo = str
		this.score = -dmg // je souhaite le minimum de dmg, à raison de 1score par dmg reçu, == dmg dealt pour le moment
	}
	
	/*
	 * Format chaîne de caracteres utilisée pour des tests / debugs.
	 */
	string() {
		return '<Danger on '+this.cell+':'+round(this.dmg)+':'+this.combo+'>'
	}
}