					for(var cellId in cells) MapAction.addAction(item, Map.getCell(cellId), entity.cell)
				}
			}
		},
		AREA_PLUS_2: function(item){
			for(var entity in item.targetSet()){
				if(entity==Fight.self) continue
				// TODO réfléchir à l'implem de ce genre de move.
				// si c'est moi la cible, si la minrange le permet, visez les cells proche ?
				// if(entity==Fight.self && item.minRange <= 2){}
				for(var cell in entity.cell.getAreaCells(AREA_PLUS_2)){
					var cells = TargetsService.getCellsToUseItemOnCell(item, cell, [Fight.self.cell])
					for(var cellId in cells) MapAction.addAction(item, Map.getCell(cellId), entity.cell)
				}
			}
		},
		AREA_PLUS_3: function(item){
			for(var entity in item.targetSet()){
				if(entity==Fight.self) continue
				// TODO réfléchir à l'implem de ce genre de move.
				// si c'est moi la cible, si la minrange le permet, visez les cells proche ?
				// if(entity==Fight.self && item.minRange <= 3){}
				for(var cell in entity.cell.getAreaCells(AREA_PLUS_3)){
					var cells = TargetsService.getCellsToUseItemOnCell(item, cell, [Fight.self.cell])
					for(var cellId in cells) MapAction.addAction(item, Map.getCell(cellId), entity.cell)
				}
			}
		},
		AREA_SQUARE_1: function(item){
			for(var entity in item.targetSet()){
				if(entity==Fight.self) continue
				// TODO réfléchir à l'implem de ce genre de move.
				// si c'est moi la cible, si la minrange le permet, visez les cells proche ?
