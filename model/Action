/*
 * Action réalisable d'une entité vers une autre
 */
class Action {
	public from
	public to
	public item
	public score
	public consequences

	constructor(item, from, to){
		this.item = item
		this.from = from
		this.to = to
		this.consequences = Consequences(this, null) // todo if chain of action, pass consequence as param instead of null
		this.score = this.consequences.getScore()
	}
	
	/*
	 * Format chaîne de caractères utilisée pour des tests / debugs.
	 */
	string(){
		return "<Action score: "+round(this.score)+" "+this.item.name+"|from:"+this.from.id+"|to:"+this.to.id+">"
	}
}