include('../auto')

class Combo {
	actions = []
	dmg = 0
	
	add(action){
		push(this.actions, action)
	}
	
	play(){
		debug(this)
		for(var action in this.actions){
			moveTowardCell(action.from)
			action.item.useItemOnCell(action.to)
		}
	}
	
	string(){
		var str= '<Combo: [\n'
		for(var action in this.actions){
			str+= action+'\n'
		}
		str+= ' | dmg:'+round(this.dmg)+']>'
		return str
	}
}